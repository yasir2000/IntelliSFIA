# Production Environment Variables
# Copy this file to .env and customize for your deployment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# =============================================================================
# DATABASE CREDENTIALS
# =============================================================================
DB_PASSWORD=your_secure_postgres_password_here
REDIS_PASSWORD=your_secure_redis_password_here
RABBITMQ_PASSWORD=your_secure_rabbitmq_password_here

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your_jwt_secret_key_256_bits_minimum
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# OAuth2/OIDC Configuration (e.g., Azure AD, Google, Auth0)
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_AUTHORITY=https://login.microsoftonline.com/your-tenant-id
OAUTH_REDIRECT_URI=https://intellisfia.com/auth/callback

# =============================================================================
# FILE STORAGE (MinIO/S3)
# =============================================================================
MINIO_ACCESS_KEY=intellisfia-admin
MINIO_SECRET_KEY=your_secure_minio_password_here
S3_BUCKET_NAME=intellisfia-documents
S3_REGION=us-east-1

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Prometheus metrics endpoint authentication
PROMETHEUS_USER=prometheus
PROMETHEUS_PASSWORD=your_secure_prometheus_password_here

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=noreply@intellisfia.com
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM_EMAIL=noreply@intellisfia.com
SMTP_FROM_NAME=IntelliSFIA

# =============================================================================
# SSL CERTIFICATES
# =============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_CHAIN_PATH=/etc/nginx/ssl/chain.pem

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
DOMAIN_NAME=intellisfia.com
API_DOMAIN=api.intellisfia.com
CORS_ORIGINS=https://intellisfia.com,https://app.intellisfia.com

# =============================================================================
# SCALING CONFIGURATION
# =============================================================================
# Worker processes (adjust based on CPU cores)
API_WORKERS=4
SFIA_ENGINE_WORKERS=2
RDF_SERVICE_WORKERS=2

# Connection pool sizes
DB_POOL_SIZE=20
REDIS_POOL_SIZE=10

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=intellisfia-backups
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=50

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Third-party integrations (if applicable)
EXTERNAL_API_KEY=your_external_api_key_here
WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for compliance
GDPR_ENABLED=true
DATA_ENCRYPTION_KEY=your_32_character_encryption_key

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Cache TTL settings (in seconds)
CACHE_TTL_SHORT=300     # 5 minutes
CACHE_TTL_MEDIUM=1800   # 30 minutes
CACHE_TTL_LONG=3600     # 1 hour

# Database connection timeouts
DB_CONNECT_TIMEOUT=30
DB_READ_TIMEOUT=30
DB_WRITE_TIMEOUT=30