# IntelliSFIA Development Configuration
# ====================================

# Environment Variables for Development
INTELLISFIA_ENV=development
INTELLISFIA_DEBUG=true
INTELLISFIA_LOG_LEVEL=DEBUG

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# Database Configuration (if applicable)
DATABASE_URL=sqlite:///./intellisfia_dev.db

# Multi-LLM Provider Configuration
# ---------------------------------

# Ollama (Local Development)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2:7b

# OpenAI (Optional - add your key)
# OPENAI_API_KEY=your-openai-key-here

# Anthropic (Optional - add your key)  
# ANTHROPIC_API_KEY=your-anthropic-key-here

# Google Gemini (Optional - add your key)
# GOOGLE_API_KEY=your-google-key-here

# Cohere (Optional - add your key)
# COHERE_API_KEY=your-cohere-key-here

# Azure OpenAI (Optional - add your credentials)
# AZURE_OPENAI_API_KEY=your-azure-key-here
# AZURE_OPENAI_ENDPOINT=your-azure-endpoint-here

# Default LLM Provider
DEFAULT_LLM_PROVIDER=ollama
ENABLE_LLM_FALLBACK=true

# Cost Tracking
ENABLE_COST_TRACKING=true
DAILY_COST_LIMIT=10.0

# Security
SECRET_KEY=dev-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Features Flags
ENABLE_CONVERSATION_MEMORY=true
ENABLE_EVIDENCE_VALIDATION=true
ENABLE_CAREER_GUIDANCE=true
ENABLE_ENSEMBLE_MODE=true

# Data Paths
SFIA_DATA_PATH=./data
ONTOLOGY_PATH=./data/sfia_ontology.ttl
SKILLS_DATA_PATH=./data/sfia9_skills.json
LEVELS_DATA_PATH=./data/sfia9_levels.json
ATTRIBUTES_DATA_PATH=./data/sfia9_attributes.json

# Cache Configuration
ENABLE_RESPONSE_CACHE=true
CACHE_TTL=3600

# Logging
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/intellisfia.log