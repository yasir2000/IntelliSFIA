# IntelliSFIA Production Configuration Template
# ============================================
# Copy to .env.production and customize for your environment

# Environment
INTELLISFIA_ENV=production
INTELLISFIA_DEBUG=false
INTELLISFIA_LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security (REQUIRED - Change these!)
SECRET_KEY=your-super-secret-key-here-change-this
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/intellisfia

# Multi-LLM Provider Configuration (Add your keys)
# ================================================

# Primary Provider (Recommended: Anthropic for production)
DEFAULT_LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Backup Providers
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
COHERE_API_KEY=your-cohere-api-key-here

# Enterprise Providers
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# AWS Bedrock (if using)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1

# Cost Management
ENABLE_COST_TRACKING=true
DAILY_COST_LIMIT=100.0
MONTHLY_COST_LIMIT=2000.0

# Performance Settings
ENABLE_LLM_FALLBACK=true
LLM_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10
ENABLE_RESPONSE_CACHE=true
CACHE_TTL=7200

# Data Paths
SFIA_DATA_PATH=/app/data
ONTOLOGY_PATH=/app/data/sfia_ontology.ttl

# Monitoring & Analytics
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/intellisfia/app.log

# Feature Flags
ENABLE_CONVERSATION_MEMORY=true
ENABLE_EVIDENCE_VALIDATION=true
ENABLE_CAREER_GUIDANCE=true
ENABLE_ENSEMBLE_MODE=false  # Disabled in prod for cost
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60